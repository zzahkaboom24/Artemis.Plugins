<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <UseArtemisNugetPackages>false</UseArtemisNugetPackages>
    </PropertyGroup>

    <ItemGroup Condition="$(UseArtemisNugetPackages)">
        <PackageReference Include="ArtemisRGB.UI.Shared" IncludeAssets="compile;build;buildTransitive" Version="1.2024.1114.5" />
    </ItemGroup>

    <ItemGroup Condition="!$(UseArtemisNugetPackages)">
        <!-- Packages here are referenced by Core and UI.Shared. If things are out of date, copy paste the references from those projects -->
        <!-- Updating the packages through Rider or VS will *probably* break, so copy paste instead -->

        <!-- Artemis.Core  -->
        <PackageReference Include="DryIoc.dll" Version="5.4.3" />
        <PackageReference Include="GenHTTP.Core" Version="9.7.0" />
        <PackageReference Include="GenHTTP.Modules.Webservices" Version="9.7.0" />
        <PackageReference Include="HidSharp" Version="2.1.0" />
        <PackageReference Include="Humanizer.Core" Version="2.14.1" />
        <PackageReference Include="JetBrains.Annotations" Version="2024.3.0" />
        <PackageReference Include="McMaster.NETCore.Plugins" Version="2.0.0" />
        <PackageReference Include="RGB.NET.Core" Version="3.0.0 " />
        <PackageReference Include="RGB.NET.Layout" Version="3.0.0 " />
        <PackageReference Include="RGB.NET.Presets" Version="3.0.0 " />
        <PackageReference Include="Serilog" Version="4.3.0" />
        <PackageReference Include="SkiaSharp" Version="2.88.9" />
        <PackageReference Include="System.Text.Json" Version="9.0.5" />

        <!-- Artemis.UI.Shared -->
        <PackageReference Include="Avalonia" Version="11.3.0" />
        <PackageReference Include="Avalonia.Controls.ItemsRepeater" Version="11.1.5" />
        <PackageReference Include="Avalonia.ReactiveUI" Version="11.3.0" />
        <PackageReference Include="Avalonia.Xaml.Behaviors" Version="11.3.0.6" />
        <PackageReference Include="DynamicData" Version="9.3.2" />
